{% macro print_list(list) -%}
    {% for i in list -%}
        {% if not loop.last -%}{{ i }}, {% else %}and {{ i }}{%- endif %}
    {%- endfor %}
{%- endmacro %}<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:media="http://www.rssboard.org/media-rss" xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
    <channel>
        <title>General Conference Talks Given by {{ print_list(speakers) }}</title>
        <link>http://www.lds.org/general-conference</link>
        <atom:link href="{{ feed_url }}" rel="self" type="application/rss+xml" />
        <lastBuildDate>{{ now | formatdate }}</lastBuildDate>
        <language>en-US</language>
        <generator>Philip Lundrigan</generator>
        <description>General Conference Talks Given by {{ print_list(speakers) }}</description>
        <itunes:image href="???"/>
        {% for talk in talks -%}
        <item>
            <title>{{ talk.title }}</title>
            <dc:creator>{{ talk.speaker }}</dc:creator>
            <pubDate>{{ talk.time | formatdate }}</pubDate>
            <link>{{ talk.url }}</link>
            <description>
                <![CDATA[{{ talk.html }}]]>
            </description>
            <itunes:author>{{ talk.speaker }}</itunes:author>
            <itunes:summary>{{ talk.preview }}</itunes:summary>
            <itunes:image href="{{ talk.image }}"/>
            <enclosure url="{{ talk.audio_url }}" length="{{ talk.audio_size }}" type="audio/mpeg"/>
        </item>
        {%- endfor %}
    </channel>
</rss>
